#include <stdio.h>
#include <stdlib.h>

int main() {
    int i, j, n, head, size, seek = 0;
    printf("Enter total number of disk requests: ");
    scanf("%d", &n);

    int request[n + 2]; // include head and max
    printf("Enter the request sequence: ");
    for (i = 0; i < n; i++)
        scanf("%d", &request[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter total disk size (e.g., 200): ");
    scanf("%d", &size);

    request[n] = head;
    request[n + 1] = size - 1; // max cylinder
    n += 2;

    // Sort
    for (i = 0; i < n - 1; i++)
        for (j = i + 1; j < n; j++)
            if (request[i] > request[j]) {
                int temp = request[i];
                request[i] = request[j];
                request[j] = temp;
            }

    // Find head index
    int index;
    for (i = 0; i < n; i++)
        if (request[i] == head)
            index = i;

    printf("Seek sequence: ");
    for (i = index; i < n; i++) {
        printf("%d ", request[i]);
        seek += abs(head - request[i]);
        head = request[i];
    }

    // Jump to beginning
    seek += abs(head - 0);
    head = 0;

    for (i = 0; i < index; i++) {
        printf("%d ", request[i]);
        seek += abs(head - request[i]);
        head = request[i];
    }

    printf("\nTotal seek time: %d\n", seek);
    return 0;
}
