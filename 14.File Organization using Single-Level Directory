// single_level.c
#include <stdio.h>
#include <string.h>
struct File {
    char name[20];
};
int main() {
    struct File directory[10];
    int n = 0;
    int choice;
    char fname[20];
 while (1) {
        printf("\n1. Create File\n2. List Files\n3. Search File\n4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter file name: ");
                scanf("%s", fname);
                strcpy(directory[n++].name, fname);
                break;
            case 2:
                printf("Files:\n");
                for (int i = 0; i < n; i++)
                    printf("%s\n", directory[i].name);
                break;
            case 3:
                printf("Enter file name to search: ");
                scanf("%s", fname);
                int found = 0;
                for (int i = 0; i < n; i++) {
                    if (strcmp(directory[i].name, fname) == 0) {
                        found = 1;
                        break;
                    }
                }
                if (found)
                    printf("File found.\n");
                else
                    printf("File not found.\n");
                break;
            case 4:
                return 0;
        }
    }
}
