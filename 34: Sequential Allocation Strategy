#include <stdio.h>

#define MAX_BLOCKS 100

int main() {
    int fileSize, startBlock;
    int disk[MAX_BLOCKS] = {0}; // 0 indicates free block

    printf("Enter the size of the file (in blocks): ");
    scanf("%d", &fileSize);

    printf("Enter the starting block: ");
    scanf("%d", &startBlock);

    // Check if space is available
    int i;
    if (startBlock + fileSize > MAX_BLOCKS) {
        printf("Error: File exceeds disk size.\n");
        return 1;
    }

    for (i = startBlock; i < startBlock + fileSize; i++) {
        if (disk[i] == 1) {
            printf("Error: Block %d already allocated. Cannot allocate file.\n", i);
            return 1;
        }
    }

    // Allocate the blocks
    for (i = startBlock; i < startBlock + fileSize; i++) {
        disk[i] = 1;
    }

    printf("File successfully allocated using Sequential Allocation.\n");
    printf("Blocks allocated: ");
    for (i = startBlock; i < startBlock + fileSize; i++) {
        printf("%d ", i);
    }
    printf("\n");

    return 0;
}

