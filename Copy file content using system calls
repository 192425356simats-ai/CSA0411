#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    char buffer[1024];
    int src = open("source.txt", O_RDONLY);
    int dest = open("destination.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    
    if (src < 0 || dest < 0) {
        perror("File error");
        return 1;
    }

    int bytes;
    while ((bytes = read(src, buffer, sizeof(buffer))) > 0) {
        write(dest, buffer, bytes);
    }

    close(src);
    close(dest);
    printf("File copied successfully.\n");
    return 0;
}
