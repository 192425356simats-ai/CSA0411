#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define FILENAME "employee.dat"
typedef struct {
    int id;
    char name[30];
    float salary;
} Employee;
void addEmployee() {
    FILE *fp = fopen(FILENAME, "ab");
    if (!fp) {
        perror("Unable to open file");
        return;
    }
Employee e;
    printf("Enter Employee ID: ");
    scanf("%d", &e.id);
    printf("Enter Employee Name: ");
    scanf("%s", e.name);
    printf("Enter Salary: ");
    scanf("%f", &e.salary);
 fwrite(&e, sizeof(Employee), 1, fp);
    fclose(fp);
    printf("Employee added successfully.\n");
}
void displayAll() {
    FILE *fp = fopen(FILENAME, "rb");
    if (!fp) {
        perror("Unable to open file");
        return;
    }
Employee e;
    printf("\n--- All Employee Records ---\n");
    while (fread(&e, sizeof(Employee), 1, fp)) {
        printf("ID: %d, Name: %s, Salary: %.2f\n", e.id, e.name, e.salary);
    }
    fclose(fp);
}
void searchByID(int searchID) {
    FILE *fp = fopen(FILENAME, "rb");
    if (!fp) {
        perror("Unable to open file");
        return;
    }

    Employee e;
    int found = 0;
    while (fread(&e, sizeof(Employee), 1, fp)) {
        if (e.id == searchID) {
            printf("Record Found: ID: %d, Name: %s, Salary: %.2f\n", e.id, e.name, e.salary);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("Employee with ID %d not found.\n", searchID);
    }

    fclose(fp);
}
void updateSalary(int updateID, float newSalary) {
    FILE *fp = fopen(FILENAME, "rb+");
    if (!fp) {
        perror("Unable to open file");
        return;
    }

    Employee e;
    while (fread(&e, sizeof(Employee), 1, fp)) {
        if (e.id == updateID) {
            e.salary = newSalary;
            fseek(fp, -sizeof(Employee), SEEK_CUR);  // Move pointer back
            fwrite(&e, sizeof(Employee), 1, fp);      // Overwrite
            printf("Salary updated successfully.\n");
            fclose(fp);
            return;
        }
    }
printf("Employee with ID %d not found.\n", updateID);
    fclose(fp);
}
